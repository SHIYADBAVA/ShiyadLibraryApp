<div class="container">
  <div class="row">
    
    <div class="col-md-12"> 
      
      <div class="panel">
        <div class="panel-body">
          
          
          
          <!--/stories-->
          <form action="/admin/edit-book/<%=book._id%>" method="POST">
            <div class="row row-space">
              <div class="col-md-6">
                    <div class="input-group text-center">
                        <label class="label1">Title</label>
                        <input class="input1--style-7" type="text" name="title" value="<%=book.title%>"  id="titlebook" required>
                    </div>
                </div><br>
                <div class="col-md-6">
                    <div class="input-group text-center">
                        <label class="label1">Name of Author</label>
                        <input class="input1--style-7" type="text" name="author" value="<%=book.author%>"  id="Author" required>
                    </div>
                </div>
            </div><br>
            <div class="row row-space">
              <div class="col-md-6">
                <div class="input-group text-center">
                    <label class="label1">Description</label>
                    <input class="input1--style-7" type="text" name="description" value="<%=book.description%>" id="description" required>
                </div>
            </div>
              <div class="col-md-6">
                  <div class="input-group text-center">
                      <label class="label1">Genre</label>
                      <input class="input1--style-7" type="text" name="genre" value="<%=book.genre%>" id="genre" required>
                  </div>
              </div>
            <div class="row row-space">
              <div class="col-md-6"><br>
                <div class="input-group text-center">
                  <label class="label1">Change Image</label>
                  <input class="input1--style-7" type="file" name="image" accept="image/*" id="image" required>
                </div>
              </div>
            </div><br>
            <div class="col-md-3">
              <div class="input-group text-center">
                <label class="label1">Current Image</label>
                <img alt="" src="/image/<%=book.image%>" style="width:130px;height:110px" class="img-sqaure">
              </div>
            </div><br>
          </div>
            <div class="p-t-15 text-center">
                <button class="btn btn--radius-2 btn-success btn-lg" type="submit">Update</button>
            </div>
        </form>
          <!--/stories-->
          
          
        
          
        </div>
